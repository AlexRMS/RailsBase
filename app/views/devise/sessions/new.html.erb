<section class="mt-5 pt-5">
	<div class="card col-6 offset-3 py-4 px-5 shadow mt-5">
		<h2>Fazer login</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :login, required: true, autofocus: true, input_html: { autocomplete: "login" } %>
		    <%= f.input :password, required: true, input_html: { autocomplete: "current-password" } %>
		    <%= f.input :remember_me, label: "Permanecer ativo", as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="actions row mx-1">
		  	<%= link_to "Cadastrar-se", new_registration_path(resource_name) %>
		    <%= f.button :submit, "Entrar", class: "btn-success ml-auto" %>
		  </div>
		<% end %>
	</div>
</section>
